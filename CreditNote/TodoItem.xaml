<UserControl x:Class="CreditNote.TodoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CreditNote"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" PreviewKeyDown="ItemNameTb_PreviewKeyDown">
    <Grid Background="White" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" FontSize="15" x:Name="DateText" Width="80" Height="30" HorizontalAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Foreground="Gray"></TextBox>
        <TextBox Grid.Column="1" FontSize="20" x:Name="ItemNameTb" VerticalContentAlignment="Center" BorderThickness="0" Foreground="DimGray">New Task</TextBox>
        <TextBox Grid.Column="2" FontSize="20" x:Name="Money" Height="30" Width="65" VerticalContentAlignment="Center" HorizontalAlignment="Right"  BorderThickness="0" Foreground="DarkCyan" TextAlignment="Right">0</TextBox>
    </Grid>
</UserControl>
